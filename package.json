{
  "name": "express-js-base-project",
  "version": "1.0.0",
  "description": "A boilerplate to start new ExpressJS projects",
  "main": "index.js",
  "repository": "https://github.com/lbertoncello/expressjs-base-project",
  "author": "lbertoncello",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "start": "node src/main/app.js",
    "dev": "nodemon src/main/app.js",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs --fix",
    "format": "prettier --write src/",
    "prepare": "husky install"
